<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_topic_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_topic_story_height"
    android:layout_margin="5dp"
    android:background="@drawable/state_click_on_item_topic"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="5dp"
    android:weightSum="7">


    <ImageView
        android:id="@+id/imageview_icon_topic"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:src="@drawable/congai" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <TextView
            android:id="@+id/textview_topic_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/arial"
            android:text="@string/app_name"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textview_topic_story_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:text="@string/number"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>


</LinearLayout>