<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_single_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_topic_story_height"
    android:weightSum="10"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/background_item_single_story"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/imageview_smile"
        android:contentDescription="@string/desc"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_gravity="center"
        android:src="@drawable/icon_smile" />


    <TextView
        android:id="@+id/textview_title_story"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="12sp"
        android:textStyle="bold" />

</TableRow>